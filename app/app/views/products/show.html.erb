<div class="container mt-5">

  <%= link_to 'Volver', products_path %>

  <div class="card text-center my-5">
    <div class="card-header d-flex justify-content-between">
        <h4 class="my-auto">Datos del Producto</h4>
        <div>
             <%= link_to 'Editar', edit_product_path(@product), class: 'btn btn-primary' %>
             <%= link_to 'Eliminar', @product, method: :delete, class: 'btn btn-primary', data: { confirm: 'comfirmas eliminar este producto?' } %>
        </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"> <%= @product.title %> </h5>
      <p class="card-text">   <%= @product.description %></p> 
      <div>
          <h5 class="card-title"> Precio </h5>
          <p class="card-text"> $ <%= @product.price %></p>
       </div> 
    </div>
    <div class="card-footer text-muted d-flex justify-content-between">
      <div>
         <span> Fecha de Creacion</span>
         <p class="card-text"> <%= @product.created_at.strftime("%d-%m-%Y %H:%M") %></p>
      </div>

      <div>
          <span> Ultima Actualizacion</span>
          <p class="card-text"> <%= @product.updated_at.strftime("%d-%m-%Y %H:%M") %></p>
      </div>
    </div>
  </div>
  
</div>
