    <ul class="list-group">
        <li class="list-group-item bg-primary text-center text-white">
             FILTROS 
        </li>
        <p class="text-center mb-1"> - Categoria - </p>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to 'Todos', products_path, class:"text-decoration-none" %>
            <span class="badge bg-primary rounded-pill"> <%= @all  %> </span>
        </li>
        <% @categories.each do |category| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">            
                  <%= link_to products_path(category_id: category.id), class:"text-decoration-none" do %>
                    <%= category.name %>
                  <% end %>
                  <span class="badge bg-primary rounded-pill"> <%= category.products_count  %> </span>
                             
            </li>
        <% end %>
    </ul>
