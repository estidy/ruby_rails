<h2 class="text-center my-5"> <- Conoce nuestro productos -> </h2>
<div class="d-flex">
<%= link_to "Nuevo Producto", new_product_path, method: :get, class: 'btn btn-primary' %>
</div>
<div class="container mt-5">
    <div class="row">        
            <% @products.each do |product| %>
            <div class="col-sm-3 mb-3 mb-sm-0">
                <div class="card">
                    <div class="card-img-top">
                         <%= image_tag product.photo, class:'img-thumbnail', style:'height: 250px;width:100%;' if product.photo.attached? %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <p class="card-text"> $ <%= product.price %></p>
                        <div class="text-center"><%= link_to "Ver",product_path(product.id),method: :get, class: 'btn btn-primary' %></div>
                    </div>
                </div>
            </div>
            <% end %>        
    </div>
</div>

